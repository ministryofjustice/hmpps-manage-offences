{% macro offenceMarkersSection(offenceMarkers) %}
  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-full">
      <h2 class="govuk-heading-m">Offence Markers: PCSC or SDS Early Release Exclusion</h2>
      {% if offenceMarkers.markersExist %}
        <ul class="govuk-list govuk-list--bullet" id="offence-markers">
          {% if offenceMarkers.isSexual %}
            <li>SDS Early Release Exclusion: Sexual</li>
          {% endif %}
          {% if offenceMarkers.isDomesticAbuse %}
            <li>SDS Early Release Exclusion: Domestic Abuse</li>
          {% endif %}
          {% if offenceMarkers.isNationalSecurity %}
            <li>SDS Early Release Exclusion: National Security</li>
          {% endif %}
          {% if offenceMarkers.isViolent %}
            <li>SDS Early Release Exclusion: Violent</li>
          {% endif %}
          {% if offenceMarkers.inListA %}
            <li>SDS+: SDS >7 years between 01 April 2020 and 28 June 2022</li>
          {% endif %}
          {% if offenceMarkers.inListB %}
            <li>SDS+: SDS between 4 and 7 years after 28 June 2022</li>
          {% endif %}
          {% if offenceMarkers.inListC %}
            <li>SDS+: Sec250 >7 years after 28 June 2022</li>
          {% endif %}
          {% if offenceMarkers.inListD %}
            <li>SDS+: SDS >7 years after 28 June 2022</li>
          {% endif %}
        </ul>
      {% else %}
        <p id="no-offence-markers" class="govuk-!-margin-bottom-0">None</p>
      {% endif %}
    </div>
  </div>

{% endmacro %}
