{% from "govuk/components/button/macro.njk" import govukButton %}

{% macro removeOffenceColumn(scheduleId, schedulePartId, offenceId, csrfToken) %}
    <td class="govuk-table__cell text-align-right">
        <form method="post" action="/schedules/unlink-offence">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
            <input type="hidden" name="scheduleId" value="{{ scheduleId }}"/>
            <input type="hidden" name="schedulePartId" value="{{ schedulePartId }}"/>
            <input type="hidden" name="offenceId" value="{{ offenceId }}"/>

            {{ govukButton({
                text: "Remove",
                value: 'remove-button',
                classes: 'govuk-button--secondary govuk-!-margin-bottom-0',
                preventDoubleClick: true
            }) }}
        </form>
    </td>
{% endmacro %}
