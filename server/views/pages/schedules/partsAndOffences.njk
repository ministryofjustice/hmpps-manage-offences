{% extends "partials/layout.njk" %}
{% from "partials/nav.njk" import navBar with context %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "partials/linkedOffenceTable.njk" import linkedOffenceTable %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% set pageTitle = applicationName + " - Schedules" %}
{% set pageId = "schedules" %}

{% block navBar %}
    {{ navBar("schedules") }}
{% endblock %}

{% block aside %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Schedules",
        href: "/schedules"
      },
      {
        text: "Schedule " + fullSchedule.code
      }
    ]
  }) }}
{% endblock %}

{% macro linkOffencesButton(scheduleId, partId) %}
    {{ govukButton({
        classes: "govuk-button--tertiary",
        text: "Link offences",
        preventDoubleClick: true,
        href: '/schedules/link-offences/' + scheduleId + '/' + partId,
        attributes: { 'data-qa': 'link-offences' }
    }) }}
{% endmacro %}

{% macro linkOffencesByCsvButton(scheduleId, partId) %}
    {{ govukButton({
        classes: "govuk-button--tertiary",
        text: "Link offences using CSV",
        preventDoubleClick: true,
        href: '/schedules/parts-and-offences/' + scheduleId + '/part/' + partId + '/link',
        attributes: { 'data-qa': 'link-offences-by-csv' }
    }) }}
{% endmacro %}

{% macro partTab(part, fullSchedule, csrfToken) %}
    <div class="govuk-grid-row">
        {% set showExtraHeading = ['DVEO', 'SEO'].includes(fullSchedule.code) and part.partNumber == 2 %}
        {% if partDesc %}
            <div class="govuk-grid-column-one-half govuk-!-text-align-left">
                <h2 class="govuk-heading-m govuk-!-margin-bottom-0">{{ partDesc }}</h2>
            </div>
        {% endif %}

        {% if 'UPDATE_OFFENCE_SCHEDULES' in user.roles %}
             <div class="govuk-grid-column-full text-align-right">
                 {{ linkOffencesButton(fullSchedule.id, part.id) }}
                 {{ linkOffencesByCsvButton(fullSchedule.id, part.id) }}
                 {{ govukButton({
                     classes: "govuk-button",
                     text: "Create new part",
                     preventDoubleClick: true,
                     href: '/schedules/parts-and-offences/' + fullSchedule.id + '/part/create',
                     attributes: { 'data-qa': 'link-create-new-schedule-part' }
                 }) }}
             </div>
        {% endif %}

        {% if showExtraHeading %}
            <h2 class="govuk-heading-m govuk-!-margin-left-3">
                From 16 December, offences in part 1 will be excluded from early release and must be calculated at 50%
            </h2>
        {% endif %}
    </div>

    {{ linkedOffenceTable({
        offences: part.offences,
        scheduleId: fullSchedule.id,
        schedulePartId: part.id,
        csrfToken: csrfToken,
        user: user
    }) }}
{% endmacro %}

{% block content %}
    <h1 class="govuk-heading-l govuk-!-margin-bottom-1">
        <span class="govuk-caption-l">{{ fullSchedule.act }}</span>
        Schedule {{ fullSchedule.code }}
    </h1>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <p class="govuk-body govuk-!-font-size-16 govuk-!-padding-top-0">
                Review <a href="{{ fullSchedule.url }}" class="govuk-link" rel="noreferrer noopener" target="_blank">
                    Schedule {{ fullSchedule.code }} of the {{ fullSchedule.act }}
                </a> on legislation.gov.uk
            </p>
        </div>

        {% if fullSchedule.code === '15' %}
            <div class="govuk-grid-column-one-half govuk-!-text-align-right">
                <p class="govuk-body govuk-!-font-size-16 govuk-!-padding-top-0">
                    <a href="/schedules/pcsc-lists?scheduleId={{ fullSchedule.id }}" class="govuk-link"
                       rel="noreferrer noopener">SDS+
                        Offences for PCSC</a>
                </p>
            </div>
        {% endif %}
    </div>

    {% set tabRows = [] %}
    {% for part in fullSchedule.scheduleParts %}
        {% set labelDesc = "Part " + part.partNumber + (partDesc if partDesc else "") %}
        {% if ['DVEO', 'SEO'].includes(fullSchedule.code) and part.partNumber == 2 %}
            {% set labelDesc = labelDesc + ' (Additional Excluded Offences)' %}
        {% endif %}
        {% set tabRows = (tabRows.push({
            label: labelDesc,
            id: "part-" + part.id,
            panel: {
                html: partTab(part, fullSchedule, csrfToken)
            }
        }), tabRows) %}
    {% endfor %}

    {{ govukTabs({
        classes: 'borderless-tabs',
        items: tabRows
    }) }}

    {{ govukBackLink({
        text: "Back",
        href: '/schedules'
    }) }}
{% endblock %}
