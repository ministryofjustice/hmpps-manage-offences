{% extends "partials/layout.njk" %}
{% from "partials/nav.njk" import navBar with context %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

    {% set pageTitle = applicationName + " - Link Schedule Offences Summary" %}
        {% set pageId = "schedules" %}

        {% block navBar %}
            {{ navBar("schedules") }}
        {% endblock %}

    {% block aside %}
        {{ govukBreadcrumbs({
            items: [
                {
                    text: "Schedules / Offences / Import"
                }
            ]
        }) }}
    {% endblock %}

    {% block content %}
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                {{ govukPanel({
                    titleText: "Linked offences summary",
                    html: message
                }) }}

                {{ govukButton({
                    classes: "govuk-button--secondary govuk-!-margin-right-2",
                    text: "Back",
                    preventDoubleClick: true,
                    href: "/schedules/parts-and-offences/" + scheduleId,
                    attributes: {  'data-qa': 'link-offences-summary' }
                }) }}
            </div>
        </div>
    {% endblock %}
